---
const { bubbles } = Astro.props;
---
<style>
    a {
      color: #00539F;
    }

    .bubbles {
      display: flex;
      flex-wrap: wrap;
    }

    .bubble {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
    a {
      text-decoration: none;
    }
</style>
<div class="bubbles">
    {bubbles.map((bubble: string) => <p class="bubble">{bubble}</p>)}
</div>
